MAIN_MENU MENU DISCARDABLE
BEGIN
   POPUP "&Επεξεργασία"
   BEGIN
      MENUITEM "&Αντιγραφή Ctrl+C",     IDM_COPY
      MENUITEM "&Επικόλληση Ctrl+V",    IDM_PASTE
   END
   POPUP "&Ένδειξη"
   BEGIN
      MENUITEM "Κανονικό",         IDM_MODE_STANDARD
      MENUITEM "Επιστημονικό",     IDM_MODE_SCIENTIFIC
      MENUITEM SEPARATOR
      MENUITEM "Οργάνωση ψηφίων",  IDM_DIGIT_GROUPING
   END
   POPUP "&Βοήθεια"
   BEGIN
      MENUITEM "Θέματα βοήθειας",  IDM_HELP_TOPICS
      MENUITEM SEPARATOR
      MENUITEM "Περί του Υπολογιστή", IDM_ABOUT
   END
END

