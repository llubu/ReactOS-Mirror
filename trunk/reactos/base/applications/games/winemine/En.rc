MENU_WINEMINE MENU DISCARDABLE
{
    POPUP "&Options" {
        MENUITEM "&New",           IDM_NEW
        MENUITEM SEPARATOR
        MENUITEM "&Mark Question", IDM_MARKQ
        MENUITEM SEPARATOR
        MENUITEM "&Beginner",      IDM_BEGINNER
        MENUITEM "&Advanced",      IDM_ADVANCED
        MENUITEM "&Expert",        IDM_EXPERT
        MENUITEM "&Custom",        IDM_CUSTOM
        MENUITEM SEPARATOR
